---
// src/components/ui/HeroCard.astro
export interface Props {
  emoji: string;
  arName: string;
  enName: string;
  href: string;
  isContact?: boolean;
}

const { emoji, arName, enName, href, isContact = false } = Astro.props;
---

<a
  href={href}
  class:list={[
    "group block p-6 rounded-xl border transition-all duration-300 transform hover:scale-[1.02] hover:shadow-md",
    isContact 
      ? "bg-[#f0fdf4] border-[#bbf7d0] hover:border-primary-500" 
      : "bg-white border-border hover:border-[#0b4f6c]/30"
  ]}
>
  <span class="block text-4xl mb-3 filter grayscale-[0.2] group-hover:grayscale-0 transition-all">
    {emoji}
  </span>
  <span class="block font-bold text-gray-800 text-lg group-hover:text-[#0b4f6c] transition-colors">
    {arName}
  </span>
  <span class="block text-xs text-gray-400 mt-1 font-sans group-hover:text-gray-600 transition-colors">
    {enName}
  </span>
</a>
