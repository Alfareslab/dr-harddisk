---
// src/components/ui/FloatingWhatsApp.astro
// Phase 1.4C: Global UI — Floating WhatsApp Button
// Quiet, accessible CTA that appears after hero scroll
// Uses currentLocation ONLY for whatsappUrl (per plan §1.4C)

import { currentLocation } from '../../config/location';

const whatsappUrl = currentLocation.contact.whatsappUrl;
const prefilledMessage = encodeURIComponent('مرحباً، عندي استفسار عن استعادة البيانات');
const href = `${whatsappUrl}?text=${prefilledMessage}`;
---

<a
  id="floating-whatsapp"
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="تواصل عبر واتساب"
  class="fixed z-40 w-10 h-10 rounded-full flex items-center justify-center
         shadow-lg hover:shadow-xl
         opacity-0 translate-y-4
         transition-all duration-300 ease-out
         focus:outline-none focus:ring-2 focus:ring-[#25D366] focus:ring-offset-2"
  style="inset-block-end: 1rem; inset-inline-start: 1rem; background-color: rgba(37, 211, 102, 0.7);"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="white"
    class="w-5 h-5"
    aria-hidden="true"
  >
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
  </svg>
</a>

<style>
  #floating-whatsapp:hover {
    background-color: rgba(37, 211, 102, 1) !important;
  }
</style>

<script>
  // IntersectionObserver: show WhatsApp button after hero exits viewport
  const whatsappBtn = document.getElementById('floating-whatsapp');

  if (whatsappBtn) {
    const hero = document.querySelector('[data-section="hero"]');

    if (hero) {
      // Hero exists — observe it
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              // Hero visible — hide button
              whatsappBtn.classList.add('opacity-0', 'translate-y-4');
              whatsappBtn.classList.remove('opacity-100', 'translate-y-0');
            } else {
              // Hero scrolled out — show button
              whatsappBtn.classList.remove('opacity-0', 'translate-y-4');
              whatsappBtn.classList.add('opacity-100', 'translate-y-0');
            }
          });
        },
        { threshold: 0 }
      );
      observer.observe(hero);
    } else {
      // No hero section — always visible
      whatsappBtn.classList.remove('opacity-0', 'translate-y-4');
      whatsappBtn.classList.add('opacity-100', 'translate-y-0');
    }
  }
</script>
