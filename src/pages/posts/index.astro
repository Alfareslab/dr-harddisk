---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPublishedPosts } from '../../utils/content';
import ArticleCard from '../../components/ArticleCard.astro';
import CategoryFilter from '../../components/CategoryFilter.astro';

// Enable prerendering (SSG)
export const prerender = true;

const allPosts = await getPublishedPosts();
// Filter out non-Arabic posts if needed. Arabic posts have lang === 'ar'
const arabicPosts = allPosts.filter(post => post.data.lang === 'ar');

// Extract unique categories
const categories = [...new Set(arabicPosts.map(post => post.data.category))];
---

<BaseLayout 
  title="المقالات المعرفية | Datacodex" 
  description="تصفح مكتبة المقالات الشاملة حول استعادة البيانات، أعطال الهارد ديسك، ونصائح الحماية من Datacodex."
  lang="ar"
>
  <div class="bg-slate-50 min-h-screen py-16 sm:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <div class="text-center max-w-2xl mx-auto mb-16">
        <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl mb-4">
          المقالات المعرفية
        </h1>
        <p class="text-lg leading-8 text-slate-600">
          كل ما تحتاج لمعرفته عن استعادة البيانات، التعامل مع الأعطال، وتأمين ملفاتك من الضياع.
        </p>
      </div>

      <!-- Filters -->
      {categories.length > 0 && (
        <div class="flex justify-center">
          <CategoryFilter categories={categories} locale="ar" />
        </div>
      )}

      <!-- Articles Grid -->
      {arabicPosts.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {arabicPosts.map(post => (
            <ArticleCard post={post} locale="ar" />
          ))}
        </div>
      ) : (
        <div class="text-center py-20 bg-white rounded-2xl shadow-sm border border-slate-100">
          <p class="text-slate-500 text-lg font-medium">لم يتم نشر مقالات بعد.</p>
        </div>
      )}

    </div>
  </div>
</BaseLayout>
